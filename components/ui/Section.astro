---
export interface Props { title?: string; subtitle?: string; id?: string; center?: boolean; bleed?: boolean; }
const { title, subtitle, id, center = true, bleed = false } = Astro.props as Props;
---
<section id={id} class={`py-12 md:py-16 ${bleed ? '' : 'px-4'}`}>
  <div class={`mx-auto ${bleed ? '' : 'max-w-6xl'}`}>
    {(title || subtitle) && (
      <header class={`mb-8 ${center ? 'text-center' : ''}`}>
        {title && <h2 class="text-2xl md:text-3xl font-extrabold text-deep-navy">{title}</h2>}
        {subtitle && <p class="mt-2 text-slate-600">{subtitle}</p>}
      </header>
    )}
    <slot />
  </div>
</section>
