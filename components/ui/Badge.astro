---
export interface Props { tone?: 'sky' | 'emerald' | 'amber' | 'slate'; pill?: boolean; }
const { tone = 'sky', pill = true } = Astro.props as Props;
const tones: Record<string,string> = {
  sky: 'bg-sky-50 text-sky-800 ring-sky-200',
  emerald: 'bg-emerald-50 text-emerald-800 ring-emerald-200',
  amber: 'bg-amber-50 text-amber-800 ring-amber-200',
  slate: 'bg-slate-100 text-slate-800 ring-slate-300',
};
const cls = `inline-flex items-center gap-1 ${pill ? 'rounded-full px-3 py-1' : 'rounded px-2 py-0.5'} text-xs font-medium ring-1 ${tones[tone]}`;
---
<span class={cls}>
  <slot />
</span>
