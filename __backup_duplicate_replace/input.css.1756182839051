/* --- Components Layer: Reusable blocks & accessibility --- */
@layer components {
  /* View Transition named elements */
  .vt-title { view-transition-name: page-title; }
  .vt-main  { view-transition-name: main; }
  ::view-transition-old(page-title),
  ::view-transition-new(page-title) {
    animation-duration: var(--vt-duration);
    animation-timing-function: ease;
  }
  ::view-transition-old(main),
  ::view-transition-new(main) {
    animation: vt-fade var(--vt-duration) ease both;
  }
  /* Focus states for accessibility */
  *:focus-visible {
    @apply outline-2 outline-blue-500 outline-offset-2;
  }
  a, button {
    @apply focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-400;
  }

  /* FAQ Accordion with grid+max-height fallback for animation */
  .faq-item > .animate-sweep {
    overflow: hidden;
    transition: max-height 0.3s ease-in-out, grid-template-rows 0.3s;
    max-height: 0;
  }
  .faq-item[open] > .animate-sweep {
    max-height: 100vh; /* fallback for older browsers */
  }
  @media (prefers-reduced-motion: reduce) {
    .faq-answer-wrapper { transition: none; }
  }
  @supports (grid-template-rows: subgrid) {
    .faq-item > .animate-sweep {
      display: grid;
      grid-template-rows: 0fr;
      max-height: none;
    }
    .faq-item[open] > .animate-sweep {
      grid-template-rows: 1fr;
    }
    .faq-item > .animate-sweep > * {
      min-height: 0;
    }
  }

  /* Fade-in for details accordion answers */
  details[open] .animate-sweep {
    animation: fadeIn 0.3s ease-out;
  }
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-6px); }
    to   { opacity: 1; transform: translateY(0); }
  }
  @keyframes vt-fade { from { opacity: .92 } to { opacity: 1 } }

  /* Step Indicator (horizontal progress with overflow and accessibility) */
  .step-indicator {
    @apply relative flex justify-center gap-2 sm:gap-4 mb-8 overflow-x-auto pb-2;
    scrollbar-width: none;
    mask: linear-gradient(90deg, transparent, black 20px, black calc(100% - 20px), transparent);
  }

  .step {
    @apply flex items-center px-4 py-2 text-slate-600 flex-grow justify-center;
  }

  .step .step-label {
    @apply bg-white px-1 hidden md:inline-block ml-3 font-medium;
  }

  .step .step-number {
    @apply bg-white inline-flex items-center justify-center w-8 h-8 rounded-full border-2 font-bold transition-all;
    border-color: #d1d5db;
  }

  .step.active .step-number {
    @apply bg-sky-500 border-sky-500 text-white;
  }

  .step.active {
    @apply text-deep-navy font-bold;
  }

  .step.completed .step-number {
    @apply bg-green-600 border-green-600 text-white;
  }
  /* removed stray closing brace and invalid contain property */
  .step-indicator::-webkit-scrollbar {
    display: none;
  }
  .step-indicator::before {
    content: '';
    @apply absolute top-1/2 left-4 right-4 h-0.5 bg-gray-300 -translate-y-1/2 z-0;
    inset-inline: 1rem; /* Logical property for RTL */
  }
  
  /* Thumbnail images - aspect ratio, performance, and CLS */
  .thumbnail-item {
    contain: layout paint style;
  }
  .thumbnail-item img {
    @apply aspect-[4/3] object-cover w-full;
    content-visibility: auto; /* Performance boost */
    /* NOTE: Add width & height in HTML for CLS prevention */
  }

  /* Reusable Chrome/Glass utilities */
