  /* --- Advanced CTA Pulse Effects --- */

  /* 1. Soft Glowing Animated Ring Pulse */
  .cta-pulse {
    position: relative;
    z-index: 1;
    overflow: visible;
  }
  .cta-pulse::before {
    content: '';
    position: absolute;
    left: 50%; top: 50%;
    transform: translate(-50%, -50%);
    width: 120%; height: 120%;
