    pointer-events: none;
  }
  @keyframes ring-pulse {
    0% {
      opacity: 0.6;
      transform: translate(-50%, -50%) scale(1);
    }
    60% {
      opacity: 0.0;
      transform: translate(-50%, -50%) scale(1.32);
    }
    100% {
      opacity: 0.0;
      transform: translate(-50%, -50%) scale(1.5);
    }
  }

  /* 2. Inner Glow + Outer Pulse Hybrid */
